generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma/client"
  engineType = "client"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:@localhost:3306/db"
}

model journey {
  journeyId String   @id @default("journey")
  name      String
  color     String   @default("bg-white")
  lng       Float    @default(0)
  lat       Float    @default(0)
  marker    marker[]
  image     image[]
}

model marker {
  id        Int     @id @default(autoincrement())
  name      String
  lng       Float
  lat       Float
  color     String  @default("bg-white")
  journeyId String
  journey   journey @relation(fields: [journeyId], references: [journeyId], map: "Marker_journeyId_fkey")

  @@index([journeyId], map: "Marker_journeyId_fkey")
}

model image {
  id        String   @id @default(uuid())
  path      String
  fileName  String
  fileType  String
  createdOn DateTime
  width     Int
  height    Int
  lng       Float?
  lat       Float?
  journeyId String
  journey   journey  @relation(fields: [journeyId], references: [journeyId], map: "Image_journeyId_fkey")
}
